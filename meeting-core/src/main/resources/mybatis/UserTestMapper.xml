<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenyingjun.meeting.mapper.UserTestMapper">

    <resultMap id="BaseResultMap" type="com.chenyingjun.meeting.entity.UserTest">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List">
        id, username, password
    </sql>

    <!-- 模糊查询信息 -->
    <select id="selectLike" parameterType="com.chenyingjun.meeting.entity.UserTest" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user_test
        <where>
            <if test="username != null">
                username like #{username, jdbcType=VARCHAR}
            </if>
            <if test="password != null">
                password like #{password, jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>